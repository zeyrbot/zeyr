{
	"name": "turborepo-template",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"postinstall": "husky install .github/husky && pnpm bot prisma:generate",
		"bot": "pnpm --filter zeyr",
		"www": "pnpm --filter website",
		"lint": "pnpm rome check . --apply-unsafe",
		"format": "pnpm rome format . --write",
		"update:i": "pnpm --recursive update -i",
		"migrate:dev": "prisma migrate dev"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@sapphire/ts-config": "^4.0.0",
		"@types/node": "^18.16.17",
		"@types/ws": "^8.5.5",
		"husky": "^8.0.3",
		"prisma": "^4.15.0",
		"rome": "12.1.2",
		"tsc-watch": "^6.0.4",
		"turbo": "latest",
		"typescript": "^5.1.3"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"packageManager": "pnpm@7.28.0",
	"dependencies": {
		"@prisma/client": "^4.15.0",
		"colorette": "^2.0.20"
	}
}
