{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": ["dist/**", "build/**"],
			"cache": true
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		}
	},
	"globalEnv": ["NODE_ENV"]
}
