{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "../dist",
        "rootDir": ".",
        "tsBuildInfoFile": "../dist/.tsbuildinfo",
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        ".",
        "./**/*.json"
    ],
    "exclude": [
        "./tsconfig.json"
    ]
}
