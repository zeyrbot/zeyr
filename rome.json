{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": ["node_modules", "dist", ".svelte-kit"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnreachable": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentSize": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"trailingComma": "none",
			"semicolons": "always",
			"quoteStyle": "double"
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
